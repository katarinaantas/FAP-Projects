var num1 = parseFloat(prompt("digite um número: "));
var operacao = prompt("qual a operação que deseja? ");
var num2 = parseFloat(prompt("digite outro número: "));
var resultado;

switch (operacao) {
    case "+":
        resultado = num1+num2;
        console.log(resultado);
        break;
    case "-":
        resultado = num1-num2;
        console.log(resultado);
        break;
    case "/":
        resultado = num1/num2;
        console.log(resultado);
        break;
    case "*":
        resultado = num1*num2;
        console.log(resultado);
        break;
    default:
        console.log("resultado inválido")
}
